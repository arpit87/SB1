<?xml version="1.0" encoding="utf-8"?>
    
<RelativeLayout 
       xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/fbloginpromptonmap"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/fbloginpromptflicker"
	    >
	    <LinearLayout 
	       android:id="@+id/fbloginpromptloginlayout"
	       android:layout_height="wrap_content"
	       android:layout_width="wrap_content"
	       android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true" 
	       android:gravity="center_vertical"
	       android:clickable="true"
	       >
	     <ImageView
            android:id="@+id/fbloginpromptfbbuttonView"
            android:layout_width="28.0dip"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fb_icon"
            
            
            android:layout_marginLeft="5dip"/>
	    <TextView android:id="@+id/fbloginprompttext"	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:textSize="15dip"
	        android:text="  Tap here to interact with users"
	        
	        />
	    </LinearLayout>
	    <ImageView
            android:id="@+id/fbloginpromptclose"
            android:layout_width="30dip"
            android:layout_height="30dip"            
            android:src="@drawable/button_close_white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"                    
            android:scaleType="centerCrop"
            android:layout_margin="5dip" />
	</RelativeLayout>
    

