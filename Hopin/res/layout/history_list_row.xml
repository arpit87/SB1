<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector"
    android:orientation="horizontal" 
    android:padding="5dip">
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    
    android:layout_weight="1">
    <TableRow 
        android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/history_source_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dip"
            android:text="From: "                       
             />
		    <TextView
		        android:id="@+id/history_source"
		        android:layout_width="210dip"
		        android:layout_height="wrap_content"
		        android:text="B1701, Shimmering heights, Powai Vihar, powai, mumbai"
		        android:textColor="#343434"
		        android:textSize="15dip"
		        android:layout_marginTop="1dip"      
		        android:maxLines="2"
		        android:ellipsize="marquee"   />
    </TableRow>
    <TableRow >
         <TextView
            android:id="@+id/history_destination_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:textStyle="bold"
            android:text="To: "    
            android:gravity="right"                   
             />
          <TextView
        android:id="@+id/history_destination"
         android:layout_width="210dip"
        android:layout_height="wrap_content"
        android:text="Andheri, mumbai"
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="1dip"    
        android:maxLines="2"
        android:ellipsize="marquee"     />
    </TableRow>
    <TableRow > <TextView
            android:id="@+id/history_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="Details: "       
            android:textStyle="bold"                
             />
    <TextView
        android:id="@+id/history_details"
         android:layout_width="210dip"
        android:layout_height="wrap_content"
        android:text="Daily@8:00 am"
        android:textColor="#343434"
        android:textSize="15dip"
        android:lines="1"
        android:layout_marginTop="1dip"         />
    </TableRow>
    </TableLayout>
  

 <LinearLayout 
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:layout_gravity="right"
     android:orientation="vertical"> 
      <ImageView
        android:id="@+id/history_editbutton"
        android:layout_width="30.0dip"
        android:layout_height="28dp"
        android:scaleType="centerCrop"
        android:src="@drawable/edit" 
        android:gravity="top"
        android:layout_weight="0"
        android:layout_marginLeft="2dip"
        
        />        
      <TextView
        android:id="@+id/history_req_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14 Feb"
        android:textColor="@color/gray"
        android:textSize="10dip"
        android:gravity="bottom"  
        android:layout_weight="1"      />
 </LinearLayout>
  </LinearLayout>

