<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector"
    android:orientation="horizontal" 
    >
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dip"
    android:layout_weight="1">
    <TableRow 
        android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/history_source_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dip"
            android:text="From: "    
            android:gravity="right"                    
             />
		    <TextView
		        android:id="@+id/history_source"
		        android:layout_width="210dip"
		        android:layout_height="wrap_content"		        
		        android:textColor="#343434"
		        android:textSize="15dip"
		        android:layout_marginTop="1dip"      
		        android:maxLines="2"
		        android:ellipsize="marquee"   />
    </TableRow>
    <TableRow >
         <TextView
            android:id="@+id/history_destination_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:textStyle="bold"
            android:text="To: "    
            android:gravity="right"                   
             />
          <TextView
        android:id="@+id/history_destination"
         android:layout_width="210dip"
        android:layout_height="wrap_content"       
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="1dip"    
        android:maxLines="2"
        android:ellipsize="marquee"     />
    </TableRow>
    <TableRow > <TextView
            android:id="@+id/history_details_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dip"
            android:text="Time: "       
            android:textStyle="bold"                
             />
    <TextView
        android:id="@+id/history_details"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="#343434"
        android:textSize="15dip"
        android:lines="1"
                 />
    </TableRow>
    </TableLayout>
  

 <LinearLayout 
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:layout_gravity="right"
     android:orientation="vertical"
     android:layout_marginBottom="2dip"
     android:layout_marginRight="2dip"> 
      <ImageView
        android:id="@+id/history_editbutton"
        android:layout_width="30.0dip"
        android:layout_height="0dip"        
        android:src="@drawable/edit" 
        android:gravity="top"
        android:layout_weight="1"        
        
        />        
      <TextView
        android:id="@+id/history_req_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textColor="@color/gray"
        android:text="14 feb"
        android:textSize="12dip"
        android:gravity="bottom"  
        android:layout_weight="0"    
          />
 </LinearLayout>
  </LinearLayout>

