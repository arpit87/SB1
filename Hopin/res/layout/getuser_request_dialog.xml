<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rounded_rectangle_background_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dip"
    android:paddingTop="20dip" 
    android:descendantFocusability="beforeDescendants"
	android:focusableInTouchMode="true">
   
     <RelativeLayout
        android:id="@+id/get_nearbyusers_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/enter_searchdetails_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="1.0dip"
            android:paddingBottom="2.0dip"
            android:paddingTop="2.0dip"
            android:text="Find users"
            android:textStyle="bold"
            android:textColor="@color/black"            
            android:textSize="20dip" />        
       

     <!--    <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/enter_username_header_text"
            android:background="@color/dialog_grey"
            android:visibility="visible" 
            />--> 
    </RelativeLayout>
  
 <LinearLayout 
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:background="@drawable/rounded_rectangle_background_gray"
     android:orientation="vertical"
     android:padding="5dip"
     >   
 <TextView android:text="Enter source"
     android:textColor="@color/frame_blue"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:textSize="15dip"
     android:layout_gravity="left"
     android:layout_marginLeft="15dip"
     android:layout_marginTop="10dip"
     android:layout_marginBottom="3dip"
     />    
 <AutoCompleteTextView        
         android:id="@+id/getuserpopupsource"         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"   
        android:textSize="15dip"     
        android:layout_marginLeft="15dip" 
        android:layout_marginRight="15dip"          
        android:textColor="@color/black"
        android:background="@drawable/gray_green_background_selector" 
        android:gravity="center_vertical"  
        android:paddingLeft="10dip"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:hint="Enter source"
        />   
      
 
<TextView android:text="Enter destination"
     android:textColor="@color/frame_blue"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"     
     android:layout_gravity="left"
     android:textSize="15dip"
     android:layout_marginTop="15dip" 
     android:layout_marginLeft="15dip" 
     android:layout_marginRight="15dip"
     android:layout_marginBottom="3dip"
     />

 <AutoCompleteTextView        
         android:id="@+id/getuserpopupdestination"         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="15dip"         
       	android:layout_marginLeft="15dip" 
     	android:layout_marginRight="15dip"          
        android:textColor="@color/black"
        android:background="@drawable/gray_green_background_selector"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:selectAllOnFocus="true"
        android:singleLine="true"        
		android:hint="Enter destination"
        />




<RelativeLayout
    android:id="@+id/entertimeLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dip"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip" >


<TextView
    android:id="@+id/entertimeheader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dip"
    android:text="Enter time"
    android:textColor="@color/frame_blue"
    android:textSize="15dip" />

<TextView
    android:id="@+id/time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dip"
    android:layout_marginTop="6dip"
    android:layout_toRightOf="@id/entertimeheader"
    android:text="6:00"
    android:textColor="@color/black"
    android:textSize="30dip" />


<ToggleButton
    android:id="@+id/btn_am_pm_toggle"
    android:layout_width="30dip"
    android:layout_height="50dip"
    android:layout_toRightOf="@+id/time"
    android:background="@drawable/ampm"
    android:textOff=""
    android:textOn="" />

<SeekBar
    android:id="@+id/timeseekBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/btn_am_pm_toggle"
    android:layout_centerInParent="true" />


<RelativeLayout
    android:id="@+id/timescalelayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@id/timeseekBar"
    android:layout_below="@id/btn_am_pm_toggle"
    android:layout_centerInParent="true"
    android:layout_marginTop="5dip"
    android:gravity="fill_horizontal" >


    <TextView
        android:id="@+id/textView12left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="12:00"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView12right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="12:00"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/textView12right"
        android:text="9:00"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="6:00"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/textView12left"
        android:text="3:00"
        android:textColor="@color/black" />
</RelativeLayout>

</RelativeLayout>
<TextView
    android:id="@+id/enterdateheader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dip"
    android:layout_marginLeft="15dip"
    android:text="Enter date"
    android:textColor="@color/frame_blue"
    android:textSize="15dip" />

<SeekBar
    android:id="@+id/dateseekBar"
    android:layout_marginTop="5dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"   
   />



<RelativeLayout
    android:id="@+id/datescalelayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"    
    android:layout_marginTop="4dip"
    android:gravity="fill_horizontal"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"  >


    <TextView
        android:id="@+id/textView12left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Today"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView12right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Daily"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/textView12right"
        android:text="T+3"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="T+2"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/textView12left"
        android:text="T+1"
        android:textColor="@color/black" />
</RelativeLayout>

<LinearLayout
    android:id="@+id/extrashareinfolayout"
    android:layout_height="wrap_content"
     android:layout_width="fill_parent"      
     android:padding="10dip" 
     android:orientation="horizontal"
     android:gravity="center"  
     android:layout_marginTop="10dip"  
     >  
     
     
     </LinearLayout>
 </LinearLayout>      
      
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"                
        android:orientation="horizontal"
        
        android:layout_marginTop="15dip">

        <Button
            android:id="@+id/btn_cancelfindusers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/custom_button_grey"
            android:text="Cancel"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:textColor="@color/black" />        

        <Button
            android:id="@+id/btn_takeride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/custom_button_green"
            android:text="Take ride"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:textColor="@color/black" />
        
         <Button
            android:id="@+id/btn_offerride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/custom_button_blue"
            android:text="Offer ride"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>