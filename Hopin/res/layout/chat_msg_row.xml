<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"	
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:id="@+id/relativelayout_chatmsgrow"	
    android:orientation="vertical" 
	android:background="@drawable/chat_msg_frame_transblue"
	android:paddingLeft="15dip"
	android:paddingRight="15dip"
	android:paddingTop="3dip"
	android:paddingBottom="3dip"	
	>

	<TextView android:id="@+id/chatmessagename"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
		android:textSize="16sp" android:textColor="@color/black" android:textStyle="bold"
		android:paddingBottom="1dp" 
		android:text="chat name"
		/>
	<TextView android:id="@+id/chatmessagedate"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentRight="true"
		android:autoLink="none"
		android:text="chat date time"
		android:textColor="@color/gray" />
	<TextView android:id="@+id/chatmessagetext"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" android:layout_below="@id/chatmessagename"
		android:autoLink="all"
		android:text="chat message is this" 
		android:textColor="@color/black"/>
</RelativeLayout>

