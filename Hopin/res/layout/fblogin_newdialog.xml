                android:src="@drawable/bluelinemarker" />

             <TextView
        android:id="@+id/textView3"
        android:textColor="@color/fb_blue"
        android:layout_width="80dip"
        android:layout_height="wrap_content"            
        android:text="Name,hometown,education accessed" />
        </TableRow>-->

           </TableLayout>  

    
    <Button
        android:id="@+id/signInViaFacebook"
        android:layout_width="wrap_content"
        android:layout_height="30dip"        
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tableLayout1"
        android:background="@drawable/button_sign_in_with_facebook"
         />
  <TextView
        android:id="@+id/disclaimer"
        android:textColor="@color/black"
        android:layout_below="@id/signInViaFacebook"
        android:layout_marginTop="10dip"
        android:textSize="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:paddingLeft="7dip"           
        android:text="*we do not post on wall, only access basic info" />  
    

</RelativeLayout>
</LinearLayout>