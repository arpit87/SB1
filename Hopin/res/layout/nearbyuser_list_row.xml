<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector"
    android:orientation="horizontal" >

   <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/list_dp_frame_blue"       
        android:layout_margin="3dip"
        android:layout_centerVertical="true" 
         />
    
  <ImageView
        android:id="@+id/nearbyuser_list_image"
        android:layout_width="58dp"
        android:layout_height="58dp"             
        android:layout_margin="4dip"
        android:layout_centerVertical="true" 
         />
  
  
   <LinearLayout
        android:id="@+id/iconslayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"     
        android:layout_centerVertical="true"  
        android:orientation="vertical" 
        android:padding="3dip">

        <ImageView
            android:id="@+id/FbLogin"
            android:layout_width="30.0dip"
            android:layout_height="28dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fb_icon" />
        
        <ImageView
            android:id="@+id/profile_icon_view"
            android:layout_width="25.0dip"
            android:layout_height="28dp"       
            android:layout_marginTop="3dip"                    
            android:scaleType="centerCrop"
            android:src="@drawable/profile_icon1" />
        
    </LinearLayout>       
 
  
 <View android:id="@+id/separaterbar"
     android:layout_height="60dip"
     android:layout_width="0.5dip"
     android:layout_toLeftOf="@id/iconslayout"
     android:background="@color/black"
     android:layout_marginTop="3dip"
     android:layout_marginBottom="3dip"
     android:layout_centerVertical="true" />
 
 <LinearLayout
     android:id="@+id/chatuserdetails"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
     android:layout_marginTop="3dip"
     android:layout_toLeftOf="@id/separaterbar"
     android:layout_toRightOf="@id/thumbnail"
     android:orientation="vertical" 
     android:layout_centerVertical="true" >

    <TextView
        android:id="@+id/nearbyusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"       
        android:text="Arpit Mishra"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>
 
	
    <!-- We dont need gender as it can mostly be infered from name -->   
    <!-- NearbyUser Full Destination -->
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/nearbyuserFromText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textSize="10dip"
        android:textStyle="bold"
        android:layout_marginTop="1dip"  
        android:text="From: "/>    
    <TextView
        android:id="@+id/nearbyusersource"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Powai Vihar, powai, mumbai"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"      
        android:maxLines="2"
        android:ellipsize="marquee"   />
    </LinearLayout>
    
     <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/nearbyuserToText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textSize="10dip"
        android:textStyle="bold"
        android:layout_marginTop="1dip"  
        android:text="To: "/>   
        
    
    <TextView
        android:id="@+id/nearbyuserdestination"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Andheri, mumbai"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"    
        android:maxLines="2"
        android:ellipsize="marquee"     />
    </LinearLayout>
    
     <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/nearbyuserTimetext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textSize="10dip"
        android:textStyle="bold"
        android:layout_marginTop="1dip"  
        android:text="Time: "/>   
    <TextView
        android:id="@+id/nearbyusertime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="8:00 am"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"         />
    </LinearLayout>
  </LinearLayout>
  

 
   
 
 
 
 </RelativeLayout>